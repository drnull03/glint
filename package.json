{
	"name": "glint",
	"description": "A blazing-fast, lightweight, and cross-platform minimal text editor built with svelte. Designed for simplicity and performance."
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"dev:mobile": "cross-env TARGET=mobile vite dev",
		"build:mobile": "cross-env TARGET=mobile vite build",
		"build:mobile:sync": "cross-env TARGET=mobile vite build && npx cap sync android",
		"dev:desktop": "cross-env TARGET=desktop vite dev",
		"build:desktop": "cross-env TARGET=desktop vite build",
		"build:extension":"cross-env TARGET=extension vite build",
		"dev:extension":"cross-env TARGET=extension vite dev",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''"
	},
