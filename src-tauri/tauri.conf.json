{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Glint",
  "version": "0.1.0",
  "identifier": "glint.vision.creative.studio",
  "build": {
    "frontendDist": "../build-desktop",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:desktop",
    "beforeBuildCommand": "npm run build:desktop"
  },
  "app": {
    "windows": [
      {
        "title": "Glint - by Vision",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
